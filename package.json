{
  "name": "cycle-rental-management-system",
  "version": "1.0.0",
  "description": "A system to manage cycle rentals, including user reservations, cycle inventory, and rental tracking.",
  "main": "index.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "prestart": "npm run build",
    "watch": "tsc -w -p tsconfig.build.json",
    "serve": "nodemon dist/app.js",
    "start": "concurrently \"npm run watch\" \"npm run serve\"",
    "test": "jest",
    "sonar": "sonar-scanner"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm test -- --bail --findRelatedTests"
    ]
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^16.18.119",
    "concurrently": "^9.1.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "simple-git-hooks": "^2.11.1",
    "sonar-scanner": "^3.1.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "express": "^4.21.1"
  }
}
