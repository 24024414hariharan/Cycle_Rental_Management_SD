{
  "name": "email-service",
  "version": "1.0.0",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "prestart": "npm run build",
    "watch": "tsc -w -p tsconfig.build.json",
    "serve": "nodemon dist/app.js",
    "start": "concurrently \"npm run watch\" \"npm run serve\"",
    "test": "jest",
    "sonar": "sonar-scanner"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm test -- --bail --findRelatedTests"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "nodemailer": "^6.9.16",
    "sib-api-v3-sdk": "^8.5.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.0",
    "@types/nodemailer": "^6.4.16",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
