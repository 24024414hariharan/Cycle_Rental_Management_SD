datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model CycleModel {
  id         Int       @id @default(autoincrement())
  type       String    
  brand      String    
  hourlyRate Float     
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  cycles     Cycle[]
}

model Cycle {
  id          Int            @id @default(autoincrement())
  modelId     Int
  model       CycleModel     @relation(fields: [modelId], references: [id])
  condition   String         
  status      String         
  location    String?    
  hourlyRate  Float?     
  deposit     Float?     
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  rentals     CycleRental[]  @relation("CycleToRental") 
}

model CycleRental {
  id                 Int       @id @default(autoincrement())
  startTime          DateTime
  duration           Int       
  expectedReturnTime DateTime
  actualReturnTime   DateTime?
  totalFare          Float
  balanceDue         Float     @default(0)
  damageStatus       String
  userId             Int       
  cycleId            Int
  cycle              Cycle     @relation(fields: [cycleId], references: [id], name: "CycleToRental") 
  paymentStatus      String    @default("Pending") 
}
