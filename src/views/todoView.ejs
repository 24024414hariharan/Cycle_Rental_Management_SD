<!DOCTYPE html>
<html>
<head>
    <title>Todo List</title>
</head>
<body>
    <h1>Todo List</h1>
    <ul>
        <% tasks.forEach(task => { %>
            <li><%= task.task %></li>
        <% }) %>
    </ul>
    <form action="/tasks" method="POST">
        <input type="text" name="task" placeholder="Add a new task" required />
        <button type="submit">Add Task</button>
    </form>
</body>
</html>
